<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/default_bg</item>
        <item name="android:typeface">monospace</item>
        <item name="android:buttonStyle">@style/Nova.Widget.Button</item>
    </style>

    <style name="Nova.Widget.Button" parent="android:Widget.Button">
        <!-- button background, touch feed back -->
        <item name="android:background">@drawable/button_default</item>

        <!-- button minimum size -->
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- button text style -->
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

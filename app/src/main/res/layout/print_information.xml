<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/name_label1"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/positionTextView1"
        android:layout_alignStart="@+id/positionTextView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:id="@+id/companyName_label1"
        android:layout_below="@+id/positionTextView1"
        android:layout_alignLeft="@+id/phon_label1"
        android:layout_alignStart="@+id/phon_label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/phon_label1"
        android:layout_below="@+id/comNameTextView1"
        android:layout_alignLeft="@+id/fax_label1"
        android:layout_alignStart="@+id/fax_label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fax Number"
        android:id="@+id/fax_label1"
        android:layout_below="@+id/phoneTextView1"
        android:layout_alignLeft="@+id/email_label1"
        android:layout_alignStart="@+id/email_label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:id="@+id/email_label1"
        android:layout_below="@+id/faxTextView1"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView1"
        android:layout_below="@+id/name_label1"
        android:layout_alignLeft="@+id/name_label1"
        android:layout_alignStart="@+id/name_label1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comNameTextView1"
        android:layout_below="@+id/companyName_label1"
        android:layout_alignLeft="@+id/phon_label1"
        android:layout_alignStart="@+id/phon_label1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneTextView1"
        android:layout_below="@+id/phon_label1"
        android:layout_alignLeft="@+id/phon_label1"
        android:layout_alignStart="@+id/phon_label1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faxTextView1"
        android:layout_below="@+id/fax_label1"
        android:layout_alignLeft="@+id/email_label1"
        android:layout_alignStart="@+id/email_label1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextView1"
        android:layout_below="@+id/email_label1"
        android:layout_alignLeft="@+id/email_label1"
        android:layout_alignStart="@+id/email_label1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/informEditBtn1"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fax_label1"
        android:layout_toEndOf="@+id/fax_label1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveBtn1"
        android:layout_alignTop="@+id/informEditBtn1"
        android:layout_toRightOf="@+id/informEditBtn1"
        android:layout_toEndOf="@+id/informEditBtn1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:id="@+id/position_label1"
        android:layout_below="@+id/nameTextView1"
        android:layout_alignLeft="@+id/companyName_label1"
        android:layout_alignStart="@+id/companyName_label1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/positionTextView1"
        android:layout_below="@+id/position_label1"
        android:layout_alignLeft="@+id/companyName_label1"
        android:layout_alignStart="@+id/companyName_label1" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartbusinesscard2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AppUserLogin"
            android:label="Smart Business Card"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Smart Business Card"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".DialogCardInformation"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog">
        </activity>
        <activity
            android:name=".DialogCardEdit"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".PrintInformation"
            android:label="Business Card Information">
        </activity>
        <activity
            android:name=".PrintInformation2"
            android:label="Business Card Information">
        </activity>
        <activity
            android:name=".MyInformation"
            android:label="My Information">
        </activity>
        <activity
            android:name=".EmailActivity"
            android:label="Email">
        </activity>
        <activity android:name=".APIConnected"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
        <activity android:name=".MailCheck"></activity>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
